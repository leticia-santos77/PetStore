CREATE TABLE RECURSOS (
 id BIGSERIAL,
 NOME VARCHAR NOT NULL DEFAULT 'NULL',
 QTD_LUGARES INTEGER NOT NULL,
 POSSUI_TV BOOLEAN NOT NULL DEFAULT 'NULL',
 SALA_ATIVA BOOLEAN NOT NULL,
 DATA_CRIACAO DATE NOT NULL
);


ALTER TABLE RECURSOS ADD CONSTRAINT RECURSOS_pkey PRIMARY KEY (id);

CREATE TABLE RESERVA (
 id BIGSERIAL,
 RECURSOS_ID INTEGER,
 QTD_PESSOAS INTEGER NOT NULL,
 DATA DATE NOT NULL DEFAULT 'NULL',
 DATA_CRIACAO DATE NOT NULL DEFAULT 'NULL',
 CANCELADO BOOLEAN NOT NULL DEFAULT 'NULL',
 USAR_TV BOOLEAN NOT NULL DEFAULT 'NULL'
);


ALTER TABLE RESERVA ADD CONSTRAINT RESERVA_pkey PRIMARY KEY (id);

CREATE TABLE USUARIOS (
 id BIGSERIAL,
 USERNAME VARCHAR NOT NULL,
 SENHA VARCHAR NOT NULL DEFAULT 'NULL'
);


ALTER TABLE USUARIOS ADD CONSTRAINT USUARIOS_pkey PRIMARY KEY (id);
